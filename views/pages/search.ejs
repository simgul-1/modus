<!DOCTYPE html>
<html lang="en">
  <head>
	<% include ../partials/head %>
  </head>
<body>
    <style>
      body {

        padding-top: 70px;
		background-color: white;
      }
    </style>

	<header>
		<% include ../partials/header %>

		<!-- GOOGLE ANALYTICS -->
		<script>
		  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
		  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
		  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
		  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

		  ga('create', 'UA-57484255-1', 'auto');
		  ga('send', 'pageview');

		</script>

	</header>
	
	<!-- Script that sends user to search_specific for the movie clicked. -->
	
	
	
	<div class="container">
		
		<div class="row">
		<% if(result) { %>

			<% result.forEach(function(msgObj){ %>
				
				<div class="col-xs-6 col-md-3 text-center">
					<a class="thumbnail" href="/movie?title=<%= msgObj.title %>">
				  		
		   					<!--<%= msgObj.title %> (<%= msgObj.year %>) -->
		  				<img src="holder.js/100%x371">
				  		<!-- <img src="img/poster.jpg" height="371" alt="..."> -->

					</a>
			  	</div>
			  	
			<% }) %>
		<% } else { %>
			<div class="text-center">
				You have not searched for anything
			</div>
		<% } %>
		</div> 
		
				
		
	</div> <!-- /container -->

    <!-- FOOTER -->
    <footer>
        <% include ../partials/footer %>
    </footer>
  </body>

</html>
